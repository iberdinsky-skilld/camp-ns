{%
  set classes = [
    'read-more',
  ]
%}

{% if extra_classes is iterable %}
  {% set classes = classes|merge(extra_classes) %}
{% endif %}

<a{{ attributes.addClass(classes).setAttribute('href', url) }}>
  {% block text %}{{ text }}{% endblock %}
  <span class="visually-hidden">
    - {% block a11y %}{{ a11y }}{% endblock %}
  </span>
  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 600 600" class="read-more__icon">
    <path fill="none" d="M159.19 117.37v365.26L341.82 300 159.19 117.37z"/>
    <path fill="#C62E2E" d="M341.82 300L159.19 482.63v98.99L440.81 300 159.19 18.38v98.99L341.82 300z"/>
  </svg>
</a>
